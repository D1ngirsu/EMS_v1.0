<Window x:Class="EMS_v1._0Client.Views.General.MyProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Profile" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar Navbar -->
        <Border Grid.Column="0" Background="#FF2C3E50">
            <StackPanel Orientation="Vertical" Margin="10">
                <!-- User Info -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,30">
                    <Image x:Name="UserAvatar" Width="50" Height="50" Stretch="UniformToFill" Margin="0,0,10,0">
                        <Image.Clip>
                            <EllipseGeometry RadiusX="25" RadiusY="25" Center="25,25"/>
                        </Image.Clip>
                    </Image>
                    <TextBlock x:Name="UserNameTextBlock" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Navigation Items -->
                <Button x:Name="DashboardButton" Content="Quay về Dashboard" Style="{StaticResource NavButtonStyle}" Click="DashboardButton_Click"/>
                <Button x:Name="ProfileButton" Content="Profile của tôi" Style="{StaticResource NavButtonStyle}" Click="ProfileButton_Click"/>
                <Button x:Name="TodolistButton" Content="Todolist của tôi" Style="{StaticResource NavButtonStyle}" Click="TodolistButton_Click"/>

                <!-- Role-based Navigation Buttons -->
                <Button x:Name="EmployeeManagementButton" Content="Quản lý nhân sự" Style="{StaticResource NavButtonStyle}" Click="EmployeeManagementButton_Click" Visibility="Collapsed"/>
                <Button x:Name="SalaryManagementButton" Content="Quản lý lương" Style="{StaticResource NavButtonStyle}" Click="SalaryManagementButton_Click" Visibility="Collapsed"/>
                <Button x:Name="InsuranceManagementButton" Content="Quản lý bảo hiểm" Style="{StaticResource NavButtonStyle}" Click="InsuranceManagementButton_Click" Visibility="Collapsed"/>

                <!-- Spacer and Logout Button -->
                <StackPanel VerticalAlignment="Bottom" Height="300">
                    <Button Content="Đăng xuất" Style="{StaticResource NavButtonStyle}" Click="LogoutButton_Click" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="#FFF5F6FA" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- User Info Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <Image x:Name="HeaderAvatar" Width="60" Height="60" Stretch="UniformToFill" Margin="0,0,15,0">
                        <Image.Clip>
                            <EllipseGeometry RadiusX="30" RadiusY="30" Center="30,30"/>
                        </Image.Clip>
                    </Image>
                    <TextBlock x:Name="HeaderUserNameTextBlock" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Tabs -->
                <TabControl Grid.Row="1" Margin="10">
                    <TabItem Header="Thông tin nhân viên" Style="{StaticResource TabItemStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10">
                                <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">Thông tin nhân viên</TextBlock>
                                <TextBlock x:Name="EmployeeNameTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="EmployeeEmailTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="EmployeePhoneTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="EmployeeAddressTextBlock" Margin="0,0,0,5"/>
                                <TextBlock FontSize="16" FontWeight="Bold" Margin="0,20,0,10">Học hàm/Học vị</TextBlock>
                                <TextBlock x:Name="AcademicRankTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="DegreeTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="PlaceIssueTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="IssueDayTextBlock" Margin="0,0,0,5"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Thông tin xác nhận" Style="{StaticResource TabItemStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10">
                                <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">Thông tin xác nhận</TextBlock>
                                <TextBlock x:Name="IdNumberTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="IssueDayCDTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="IssuePlaceTextBlock" Margin="0,0,0,5"/>
                                <TextBlock x:Name="CountryTextBlock" Margin="0,0,0,5"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Đơn từ" Style="{StaticResource TabItemStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListView x:Name="ApplicationsListView" Margin="10">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Tên đơn" Width="200" DisplayMemberBinding="{Binding ApplicationName}"/>
                                        <GridViewColumn Header="Ngày nộp" Width="150" DisplayMemberBinding="{Binding Date, StringFormat={}{0:dd/MM/yyyy}}"/>
                                        <GridViewColumn Header="Loại đơn" Width="150" DisplayMemberBinding="{Binding ApplicationType}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Thông tin người thân" Style="{StaticResource TabItemStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListView x:Name="RelativesListView" Margin="10">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Tên" Width="200" DisplayMemberBinding="{Binding RName}"/>
                                        <GridViewColumn Header="Quan hệ" Width="150" DisplayMemberBinding="{Binding RRelativity}"/>
                                        <GridViewColumn Header="Liên hệ" Width="150" DisplayMemberBinding="{Binding RContact}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Bảo hiểm" Style="{StaticResource TabItemStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListView x:Name="InsurancesListView" Margin="10">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Nội dung bảo hiểm" Width="200" DisplayMemberBinding="{Binding InsuranceContent}"/>
                                        <GridViewColumn Header="Từ ngày" Width="150" DisplayMemberBinding="{Binding FromDate, StringFormat={}{0:dd/MM/yyyy}}"/>
                                        <GridViewColumn Header="Đến ngày" Width="150" DisplayMemberBinding="{Binding ToDate, StringFormat={}{0:dd/MM/yyyy}}"/>
                                        <GridViewColumn Header="Tỷ lệ đóng góp" Width="100" DisplayMemberBinding="{Binding ContributePercent, StringFormat={}{0:P}}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</Window>